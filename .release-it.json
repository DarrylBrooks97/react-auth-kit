{
  "git": {
    "commitMessage": "chore: release v${version}",
    "changelog": "npx auto-changelog --stdout --commit-limit false -u --template keepachangelog"
  },
  "github": {
    "release": true
  },
  "hooks": {
    "after:bump": "npx auto-changelog -p"
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md"
    }
  }
}
